#!groovy
@Library('dockerBuild') _
pipeline {
    agent any

    environment{
        GIT_COMMIT_HASH = sh (script: "git log -n 1 --pretty=format:'%H'", returnStdout: true)
        GIT_COMMIT_TAG = "${GIT_COMMIT_HASH.substring(0,8)}"
    }
    
    stages {
        stage('Docker Build') {
        steps {
            docker.build("${GIT_COMMIT_TAG}")
            sh '''
            echo "Building Docker Image"
            pwd
            '''
            }
        }
        stage('Docker RUN') {
            steps {
                sh '''
                echo "Docker RUN"
                docker rm -f mmfront
                docker run -d -p 3000:3000 --name mmfront ${GIT_COMMIT_TAG}
                '''
            }
        }
    }
}